<div class="container">
  <div class="row">
    <div class= "col-xs-3">
      <h2>User info</h2> 
      <!-- あとで編集いるかも -->
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "m_e_others_471.jpg" ,format: 'm_e_others_471.jpg' %>

      <h5>name</h5>
      <%= @user.name %>

      <h5>introduction</h5>
      <%= @user.introduction %>
     

      <%= link_to"",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>

       <%= form_for(@book,  url: books_path) do |f| %>

       <h2>New book</h2>
       <h5>title</h5>
        <%= f.text_field :title,class: "col-xs-12" %>

       <h5>opinion</h5>
       <%= f.text_field :body,class: "col-xs-12" %>

       <nev>
         <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
       </nev>
      <% end %>
    </div>

    <div class= "col-xs-9">
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>


        <% @users.each do |user| %>

        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "l_e_others_470.jpg",size:'20x20',format: 'l_e_others_470.jpg' %></td>          
          </td>
          <th><%= user.name %><th>
          <th><%= link_to"Show",user_path(user.id) %></th>
        </tr>
        <% end %>
      </table>
    </div>


  </div>
</div>