<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left" >
        <span class="text-muted" style="font-size: 20px;">Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                  <li class="">
                      <%= link_to user_path(current_user.id) do %>
                          <i class="glyphicon glyphicon-home home"></i>
                          <span>Home</span>
                      <% end %>
                  </li>
                  <li class="">
                      <%= link_to users_path do %>
                          <i class="glyphicon glyphicon-user users"></i>
                          <span>Users</span>
                      <% end %>
                  </li>
                  <li class="">
                      <%=link_to books_path do %>
                          <i class="glyphicon glyphicon-book books"></i>
                          <span>Books</span>
                      <% end %>
                  </li>
                  <li class="">
                      <%= link_to destroy_user_session_path, method: :delete do %>
                          <i class="glyphicon glyphicon-log-out logout"></i>
                          <span>logout</span>
                      <% end %>
                  </li>
                  
              <% else %>
                  <li class="">
                      <%= link_to root_path do %>
                          <i class="glyphicon glyphicon-home home"></i>
                          <span>Home</span>
                      <% end %>
                  </li>
                  <li class="">
                    <!-- あとで編集の必要 -->
                      <%= link_to home_about_path do %>
                          <i class="glyphicon glyphicon-link about"></i>
                          <span>About</span>
                      <% end %>
                  </li>
                  <li class="">
                      <%= link_to new_user_registration_path do %>
                          <i class="glyphicon glyphicon-edit sign_up"></i>
                          <span>sign up</span>
                      <% end %>
                  </li>
                  <li class="">
                      <%= link_to new_user_session_path do %>
                          <i class="glyphicon glyphicon-log-in sign_in"></i>
                          <span>login</span>
                      <% end %>
                  </li>
              <% end %>
          </ul>
        </nav>
      </div>
    </header>

     
    <div class= "body">
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
    </div>
    <%= yield %>


    <footer>
      <div class='container'>
        <div class='row'>
          <div class='col-xs-3 col-xs-offset-9'>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>